<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:padding="@dimen/podcast_list_vertical_padding">

    <TextView
        android:id="@+id/podcast_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@id/podcast_play_button"
        android:layout_toLeftOf="@id/podcast_play_button"
        android:ellipsize="none"
        android:text="Adventures in Imperfect Living"
        android:textAppearance="@android:style/TextAppearance.Holo.Large"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/podcast_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/podcast_title"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toStartOf="@id/podcast_play_button"
        android:layout_toLeftOf="@id/podcast_play_button"
        android:text="@string/podcast_summary" />

    <Button
        android:id="@+id/podcast_play_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:drawable/ic_media_play"
        android:focusable="false" />

</RelativeLayout>